<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="service.UserMapper">
    <select id="all" resultType="model.User">
        SELECT * FROM Users ORDER BY id
    </select>

    <select id="getUserById" parameterType="Integer" resultType="model.User">
        SELECT * FROM Users WHERE id = #{value}
    </select>
    
   	<insert id="insert" parameterType="model.User" useGeneratedKeys="true" keyProperty="id">
	   INSERT INTO Users(name)
	   VALUES(#{name})
	</insert>
	
	<update id="update" parameterType="model.User">
	    UPDATE Users 
	    SET
	     name= #{name}
	    WHERE id = #{id}
	</update>
	
	<delete id="delete" parameterType="Integer">
	   DELETE FROM Users WHERE id = #{id}
	</delete>
</mapper>