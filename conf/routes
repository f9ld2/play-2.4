# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   	controllers.UserCtr.list()


POST	/create					controllers.UserCtr.create()
GET		/create					controllers.UserCtr.create()

POST    /update/$id<[0-9]+>		controllers.UserCtr.update(id: Integer)
GET		/update/$id<[0-9]+>		controllers.UserCtr.update(id: Integer)

GET		/delete/$id<[0-9]+>		controllers.UserCtr.delete(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
