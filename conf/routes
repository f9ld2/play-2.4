# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   	controllers.UserCtr.list()
GET		/delete/$id<[0-9]+>		controllers.UserCtr.delete(id: Integer)
GET		/create					controllers.UserCtr.input(id: Integer ?= null)
GET		/update/$id<[0-9]+>		controllers.UserCtr.input(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
