# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   	controllers.UserCtr.list(page:Int=1)
GET     /:page                  controllers.UserCtr.list(page:Int)

# Add user
GET     /users/new              controllers.UserCtr.create()
POST    /users                  controllers.UserCtr.save()

# Edit existing user
GET     /users/:id              controllers.UserCtr.edit(id:Int)
POST    /users/:id              controllers.UserCtr.update(id:Int)

# Delete a computer
GET /users/:id/delete 			controllers.UserCtr.delete(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
